<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".ui.SplashTwoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/btn_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center_horizontal|top"
                    android:text="@string/add_vehicle"
                    android:textColor="@color/colorText"
                    android:textSize="32sp" />


                <EditText
                    android:id="@+id/regNo"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/coloretTexT_Botttom"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center_vertical"
                    android:hint="Car Number"
                    android:inputType="textCapCharacters"
                    android:textAllCaps="true"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorText"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/brand"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/coloretTexT_Botttom"
                    android:drawableEnd="@mipmap/down_arrow"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center_vertical"
                    android:hint="Car Brand"
                    android:paddingRight="20dp"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorText"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/coloretTexT_Botttom">

                </View>

                <TextView
                    android:id="@+id/model"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/coloretTexT_Botttom"
                    android:drawableEnd="@mipmap/down_arrow"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center_vertical"
                    android:hint="Car Model"
                    android:paddingRight="20dp"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorText"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/coloretTexT_Botttom">

                </View>

                <TextView
                    android:id="@+id/year"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/coloretTexT_Botttom"
                    android:drawableEnd="@mipmap/down_arrow"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center_vertical"
                    android:hint="Year"
                    android:paddingRight="20dp"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorText"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/coloretTexT_Botttom">

                </View>

                <TextView
                    android:id="@+id/connector"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:backgroundTint="@color/coloretTexT_Botttom"
                    android:drawableEnd="@mipmap/down_arrow"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center_vertical"
                    android:hint="Connector type"
                    android:paddingRight="20dp"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorText"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:background="@color/coloretTexT_Botttom">

                </View>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn_add"
                        style="@style/CustomButton"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_login_btn"
                        android:text="@string/submit_button"
                        android:textAllCaps="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|bottom"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="center_horizontal|top"
                        android:text="Skip"
                        android:visibility="gone"
                        android:textColor="@color/colorTextMeduim"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>