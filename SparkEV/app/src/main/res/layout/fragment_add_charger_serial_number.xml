<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical"
    tools:context=".ui.SplashTwoActivity">


    <!--Serial  numnber-->

    <LinearLayout
        android:id="@+id/ly_charger_serial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            android:layout_weight="0.85"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/btn_back" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center_vertical"
                    android:text="Enter charger ID"
                    android:singleLine="true"
                    android:textColor="@color/colorText"
                    android:textSize="32sp" />

                <ImageView
                    android:id="@+id/help"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_help" />

            </RelativeLayout>


            <EditText
                android:id="@+id/serial_number"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="50dp"
                android:backgroundTint="@color/coloretTexT_Botttom"
                android:fontFamily="@font/inter_regular"
                android:hint="PartNo#SerialNo"
                android:singleLine="true"
                android:maxLength="24"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorText"
                android:textSize="16sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_submit"
                    style="@style/CustomButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_login_btn"
                    android:fontFamily="@font/inter_medium"
                    android:text="@string/submit_button"
                    android:textAllCaps="false"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--============close========-->

    <!--Layout request sent-->

    <LinearLayout
        android:id="@+id/ly_request_sent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.70"
            android:orientation="vertical"
            android:paddingTop="30dp">

            <ImageView
                android:id="@+id/back_request_sent"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="15dp"
                android:src="@mipmap/btn_back" />

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/ring_unsuccess"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_request_sent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="!"
                    android:textColor="@color/colorOrange"
                    android:textSize="80sp">

                </TextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/unsuccess_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:text="Charger is already registered by XYZ. "
                    android:textColor="@color/colorText"
                    android:textSize="22sp">

                </TextView>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.30"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_request_sent"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_login_btn"
                    android:fontFamily="@font/inter_medium"
                    android:text="Send sharing request"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center_horizontal|top"
                    android:text="If this charger belongs to you, please"
                    android:textColor="@color/colorTextLight"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center_horizontal|top"
                    android:text="Contact Exicom Service Desk"
                    android:textColor="@color/themeColor"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <!--Close requst sent-->


    <!--Layout unsuccessful-->

    <LinearLayout
        android:id="@+id/ly_unsussess"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/back_unsuccessfull"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="15dp"
                android:src="@mipmap/btn_back" />

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/ring_unsuccess"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="!"
                    android:textColor="@color/colorOrange"
                    android:textSize="80sp">

                </TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_unsuccessfull"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:text="Oops.. something went wrong!"
                android:textColor="@color/colorText"
                android:textSize="22sp">

            </TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0.3"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="20dp"
            android:weightSum="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/try_again"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.5"
                android:background="@drawable/bg_login_btn"
                android:fontFamily="@font/inter_medium"
                android:text="Try again"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/contactus"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/bg_contact_us"
                android:fontFamily="@font/inter_medium"
                android:text="Contact us "
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

    <!--Close unsuccessful-->


    <LinearLayout
        android:id="@+id/ly_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:background="@drawable/ring_success"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_success">

            </ImageView>

        </LinearLayout>

        <TextView
            android:id="@+id/success_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:text="Success!"
            android:textColor="@color/colorText"
            android:textSize="22sp">

        </TextView>

    </LinearLayout>
</LinearLayout>