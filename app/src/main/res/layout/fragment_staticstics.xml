<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical"
    tools:context=".ui.SplashTwoActivity">

    <ScrollView
        android:id="@+id/sc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/charger_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="Charger 1"
                        android:textColor="@color/colorText"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/img_chart"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/pie_chart" />

                </RelativeLayout>


                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/rb_energy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/radio_flat_selector"
                        android:button="@android:color/transparent"
                        android:checked="true"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="center"
                        android:text="Energy"
                        android:textColor="@color/rb_flat_text_selector"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rb_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0.0dp"
                        android:layout_weight="1"
                        android:background="@drawable/radio_flat_selector"
                        android:button="@android:color/transparent"
                        android:checked="false"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="center"
                        android:text="Time"
                        android:textColor="@color/rb_flat_text_selector"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </RadioGroup>



                <RelativeLayout
                    android:id="@+id/ly_select_toggle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/get_occp_logs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_toLeftOf="@id/tb_ble"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="OCPP logs"
                        android:textColor="@color/colorText"
                        android:textSize="16sp" />

                    <ToggleButton
                        android:id="@+id/tb_ble"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/bg_switch"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        android:id="@+id/get_ble_logs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="BLE logs"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/tb_ble"
                        android:textColor="@color/colorText"
                        android:textSize="16sp" />

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/ly_staticsitcs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ly_unit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/total_kwh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_bold"
                            android:singleLine="true"
                            android:textColor="@color/colorText"
                            android:textSize="32sp" />

                        <TextView
                            android:id="@+id/unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:fontFamily="@font/inter_regular"
                            android:singleLine="true"
                            android:textColor="@color/colorText"
                            android:textSize="14sp" />

                    </LinearLayout>


                    <!--Ui component for our bar chart-->
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/idBarChart"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginTop="20dp"
                        tools:ignore="MissingClass" />


                    <RelativeLayout
                        android:id="@+id/rl_pie_chart"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_marginTop="50dp"
                        android:layout_height="300dp">

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/idPieChart"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            tools:ignore="MissingClass" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/pie_total_kwh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_bold"
                                android:singleLine="true"
                                android:text="54"
                                android:textColor="@color/colorText"
                                android:textSize="32sp" />

                            <TextView
                                android:id="@+id/pie_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:fontFamily="@font/inter_regular"
                                android:singleLine="true"
                                android:text="kWh"
                                android:textColor="@color/colorText"
                                android:textSize="14sp" />

                        </LinearLayout>
                    </RelativeLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_ly_services"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_regular"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="Charging session"
                                android:textColor="@color/colorText"
                                android:textSize="16sp" />


                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_regular"
                                android:singleLine="true"
                                android:text="day"
                                android:textColor="@color/colorlight"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_regular"
                                android:singleLine="true"
                                android:text="energy"
                                android:textColor="@color/colorlight"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_regular"
                                android:singleLine="true"
                                android:text="charging time"
                                android:textColor="@color/colorlight"
                                android:textSize="12sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/last_day"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_regular"
                                android:singleLine="true"
                                android:textColor="@color/colorText"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/last_energy"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_regular"
                                android:singleLine="true"
                                android:textColor="@color/colorText"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/last_charging_time"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_regular"
                                android:singleLine="true"
                                android:textColor="@color/colorText"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_ly_services"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_regular"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="This month"
                                android:textColor="@color/colorText"
                                android:textSize="16sp" />


                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_regular"
                                android:singleLine="true"
                                android:text="sessions"
                                android:textColor="@color/colorlight"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_regular"
                                android:singleLine="true"
                                android:text="energy"
                                android:textColor="@color/colorlight"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_regular"
                                android:singleLine="true"
                                android:text="charging time"
                                android:textColor="@color/colorlight"
                                android:textSize="12sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/total_session"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_regular"
                                android:singleLine="true"
                                android:textColor="@color/colorText"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/monthly_energy"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_regular"
                                android:singleLine="true"
                                android:textColor="@color/colorText"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/monthly_charging_time"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_regular"
                                android:singleLine="true"
                                android:textColor="@color/colorText"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_ly_services"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:padding="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_regular"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="Reduction"
                                android:textColor="@color/colorText"
                                android:textSize="16sp" />


                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_regular"
                                android:singleLine="true"
                                android:text="CO2 emission"
                                android:textColor="@color/colorlight"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_regular"
                                android:singleLine="true"
                                android:text="Particulate matter"
                                android:textColor="@color/colorlight"
                                android:textSize="12sp" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/co2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_regular"
                                android:singleLine="true"
                                android:text="20%"
                                android:textColor="@color/colorText"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/particulate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_regular"
                                android:singleLine="true"
                                android:text="30%"
                                android:textColor="@color/colorText"
                                android:textSize="16sp" />


                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/bg_ly_services"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/session_history"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:drawableLeft="@mipmap/ic_session_cd"
                            android:drawableRight="@mipmap/next_arrow"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:paddingTop="3dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="3dp"
                            android:text="Sessions history"
                            android:textColor="@color/colorText"
                            android:textSize="16sp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="50dp"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/img_bg"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:scaleType="fitXY"
android:visibility="gone"
                        android:src="@mipmap/bg_statistics">

                    </ImageView>
                    <TextView
                        android:id="@+id/tv_data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:text="You don't have any charging record yet"
                        android:textColor="@color/colorTextLight"
                        android:textSize="20sp"
                        android:visibility="gone"
                        android:layout_marginTop="20dp"
                        >
                    </TextView>
                </LinearLayout>

            </LinearLayout>




        </LinearLayout>


    </ScrollView>



</LinearLayout>