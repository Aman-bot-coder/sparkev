<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:singleLine="true"
        android:text="Active"
        android:textColor="#bfbfbf"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_ly_services"
        android:orientation="horizontal"
        android:padding="20dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="vertical">


            <TextView
                android:id="@+id/charger_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:singleLine="true"
                android:text="charger name"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/charger_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@mipmap/ic_offline"
                android:drawablePadding="10dp"
                android:fontFamily="@font/inter_regular"
                android:singleLine="true"
                android:textColor="@color/colorText"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/charger_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:drawableLeft="@mipmap/ic_person_cl"
                android:drawablePadding="10dp"
                android:fontFamily="@font/inter_regular"
                android:singleLine="true"
                android:textColor="@color/colorText"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/expirydate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:drawableLeft="@mipmap/subtract"
                android:drawablePadding="10dp"
                android:fontFamily="@font/inter_regular"
                android:singleLine="true"
                android:textColor="@color/colorText"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_view_details"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/view_details"></ImageView>

            <ImageView
                android:id="@+id/img_shared"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="30dp"
                android:src="@mipmap/ic_shared">

            </ImageView>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>