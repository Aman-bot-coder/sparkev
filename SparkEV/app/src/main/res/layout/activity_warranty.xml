<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".ui.SplashTwoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/btn_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center_horizontal|top"
                    android:text="Warranty"
                    android:textColor="@color/colorText"
                    android:textSize="32sp" />

                <LinearLayout
                    android:id="@+id/ly_charger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/bg_ly_services"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/charger_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="Charger 1"
                            android:paddingTop="15dp"
                            android:textColor="@color/colorText"
                            android:textColorHint="@color/colorText"
                            android:textSize="18sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/expirydate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/subtract"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="Warranty Status"
                            android:textColor="@color/colorText"
                            android:textColorHint="@color/colorText"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_active_expired"
                            android:layout_width="100dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/bg_login_btn"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="center"
                            android:text="Active"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/click"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableRight="@mipmap/down_arrow"
                            android:drawablePadding="15dp"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:text=""
                            android:layout_marginRight="18dp"
                            android:textColor="@color/colorText"
                            android:textColorHint="@color/colorText"
                            android:textSize="18sp" />

                    </LinearLayout>





                    <LinearLayout
                        android:id="@+id/ly_charger_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/exiting_plan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="Existing Plan : 3 Year Plan"
                            android:textColor="@color/colorText"
                            android:textColorHint="@color/colorText"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/activate_on"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="Activated on : Nov 01, 2023"
                            android:textColor="@color/colorText"
                            android:textColorHint="@color/colorText"
                            android:textSize="12sp" />



                    </LinearLayout>
                    <TextView
                        android:id="@+id/valid_upto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="Valid Upto : Nov 01, 2028"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorText"
                        android:textSize="12sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_why_do_u_need"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/bg_ly_services"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/why_do_u_need"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/down_arrow"
                        android:drawablePadding="15dp"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:padding="20dp"
                        android:text="Why do you need the Extended Charger Warranty?"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorText"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/why_do_u_need_des"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="20dp"
                        android:text="Exicom AC charger supplied along with the car has a warranty for one year. The warranty period is applicable for one year from the date of commissioning of the charger.
\n\n In case your AC charger starts malfunctioning at the lapse of warranty, you can rely on Exicom’s Extended Warranty Cover."
                        android:textColor="@color/colorTextLight"
                        android:textSize="12sp"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_ly_services"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_benefits"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/down_arrow"
                        android:drawablePadding="15dp"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:padding="20dp"
                        android:text="What benefits will I get with the Extended Charger Warranty?"
                        android:textColor="@color/colorText"
                        android:textSize="16sp" />


                    <LinearLayout
                        android:id="@+id/ly_benefits"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp">

                            <TextView
                                android:layout_width="5dp"
                                android:layout_height="5dp"
                                android:background="@drawable/bullets"

                                android:fontFamily="@font/inter_regular"
                                android:gravity="center_vertical"
                                android:textColor="@color/colorTextLight"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"

                                android:fontFamily="@font/inter_regular"
                                android:gravity="center_vertical"
                                android:text="Onsite Support"
                                android:textColor="@color/colorTextLight"
                                android:textSize="12sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp">

                            <TextView
                                android:layout_width="5dp"
                                android:layout_height="5dp"
                                android:background="@drawable/bullets"

                                android:fontFamily="@font/inter_regular"
                                android:gravity="center_vertical"
                                android:textColor="@color/colorTextLight"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"

                                android:fontFamily="@font/inter_regular"
                                android:gravity="center_vertical"
                                android:text="Zero visit charges"

                                android:textColor="@color/colorTextLight"
                                android:textSize="12sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp">

                            <TextView
                                android:layout_width="5dp"
                                android:layout_height="5dp"
                                android:background="@drawable/bullets"

                                android:fontFamily="@font/inter_regular"
                                android:gravity="center_vertical"
                                android:textColor="@color/colorTextLight"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"

                                android:fontFamily="@font/inter_regular"
                                android:gravity="center_vertical"
                                android:text="Zero spare cost"

                                android:textColor="@color/colorTextLight"
                                android:textSize="12sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp">

                            <TextView
                                android:layout_width="5dp"
                                android:layout_height="5dp"
                                android:background="@drawable/bullets"

                                android:fontFamily="@font/inter_regular"
                                android:gravity="center_vertical"
                                android:textColor="@color/colorTextLight"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"

                                android:fontFamily="@font/inter_regular"
                                android:gravity="center_vertical"

                                android:text="Zero Labour cost"
                                android:textColor="@color/colorTextLight"
                                android:textSize="12sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="20dp">

                            <TextView
                                android:layout_width="5dp"
                                android:layout_height="5dp"
                                android:background="@drawable/bullets"

                                android:fontFamily="@font/inter_regular"
                                android:gravity="center_vertical"
                                android:textColor="@color/colorTextLight"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"

                                android:fontFamily="@font/inter_regular"
                                android:gravity="center_vertical"

                                android:text="Software/Firmware support"
                                android:textColor="@color/colorTextLight"
                                android:textSize="12sp" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_under_cover"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_ly_services"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_under_cover"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/down_arrow"
                        android:drawablePadding="15dp"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:padding="20dp"
                        android:text="What is covered under the Extended Charger Warranty?"
                        android:textColor="@color/colorText"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_under_cover_dec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="20dp"
                        android:text="Please refer Warranty Terms and Conditions to understand the exclusions (We can add a link here to Exicom’s AMC page)"
                        android:textColor="@color/colorTextLight"
                        android:textSize="12sp"
                        android:visibility="gone" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/ly_warranty_one"
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_ly_wrarrnty_one_grad"
                        android:orientation="vertical"
                        android:padding="20dp">


                        <TextView
                            android:id="@+id/warranty_plan_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="bottom"
                            android:text="1 year plan"
                            android:textColor="@color/white"
                            android:textFontWeight="500"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/warranty_plan_price_one"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="bottom"
                            android:text=""
                            android:textColor="@color/white"
                            android:textFontWeight="500"
                            android:textSize="22sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ly_warranty_two"
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_ly_wrarrnty_two_grad"
                        android:orientation="vertical"
                        android:padding="20dp">


                        <TextView
                            android:id="@+id/warranty_plan_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="bottom"
                            android:text="3 year plan"
                            android:textColor="@color/white"
                            android:textFontWeight="500"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/warranty_plan_price_two"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="bottom"
                            android:text=""
                            android:textColor="@color/white"
                            android:textFontWeight="500"
                            android:textSize="22sp" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>