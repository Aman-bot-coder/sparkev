    <LinearLayout
        android:id="@+id/ly_upgrade_plan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.25"
        android:background="@drawable/bg_ly_services_grad"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/img_upgrade"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_upgrade_ble">

        </ImageView>

        <TextView
            android:id="@+id/tv_upgrade"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/inter_regular"
            android:gravity="bottom"
            android:text="Upgrade to Connected Charger"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="3">
            <LinearLayout
                android:id="@+id/ly_contact_us"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:background="@drawable/bg_ly_services"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/contact_us"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter_regular"
                    android:text="Contact us"
                    android:gravity="bottom"
                    android:textFontWeight="500"
                    android:layout_gravity="bottom"
                    android:textColor="@color/colorText"
                    android:textSize="16sp" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/ly_warranty_plan"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:background="@drawable/bg_ly_services"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/warranty"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter_regular"
                    android:text="Warranty Plan"
                    android:gravity="bottom"
                    android:textFontWeight="500"
                    android:layout_gravity="bottom"
                    android:textColor="@color/colorText"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_smart_watch"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:background="@drawable/bg_ly_services"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/smart_watch">

                </ImageView>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter_regular"
                    android:text="Smart Watch"
                    android:gravity="bottom"
                    android:textFontWeight="500"
                    android:layout_gravity="bottom"
                    android:textColor="@color/colorText"
                    android:textSize="16sp" />

            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="3">
            <LinearLayout
                android:id="@+id/ly_callback"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:background="@drawable/bg_ly_services"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/telephone"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter_regular"
                    android:text="Callback request"
                    android:gravity="bottom"
                    android:textFontWeight="500"
                    android:layout_gravity="bottom"
                    android:textColor="@color/colorText"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_faq"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:background="@drawable/bg_ly_services"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/ic_faq"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter_regular"
                    android:text="FAQ"
                    android:gravity="bottom"
                    android:textFontWeight="500"
                    android:layout_gravity="bottom"
                    android:textColor="@color/colorText"
                    android:textSize="16sp" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/ly_alexa"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:background="@drawable/bg_ly_services"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/services"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter_regular"
                    android:text="Alexa"
                    android:gravity="bottom"
                    android:textFontWeight="500"
                    android:layout_gravity="bottom"
                    android:textColor="@color/colorText"
                    android:textSize="16sp" />
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>


</LinearLayout>