<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBg"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBg"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/btn_back">

            </ImageView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/inter_regular"
                android:gravity="center_horizontal|top"
                android:text="Share"
                android:textColor="@color/colorText"
                android:textSize="32sp" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <RadioButton
                    android:id="@+id/rb_receiced"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/radio_flat_selector"
                    android:button="@android:color/transparent"
                    android:checked="true"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:text="Received request"
                    android:textColor="@color/rb_flat_text_selector"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/rb_send"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0.0dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_flat_selector"
                    android:button="@android:color/transparent"
                    android:checked="false"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:text="Send request"
                    android:textColor="@color/rb_flat_text_selector"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RadioGroup>

            <TextView
                android:id="@+id/tv_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Youâ€™ve got no request yet"
                android:fontFamily="@font/inter_regular"
                android:visibility="gone"
                android:textColor="@color/colorTextLight"
                android:gravity="center"
                android:textSize="22sp">

            </TextView>

            <TextView
                android:id="@+id/sharing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Sharing"
                android:textColor="@color/colorlight"
                android:textSize="16sp" />

            <com.augmentaa.sparkev.utils.ListViewForEmbeddingInScrollView
                android:id="@+id/lv_sharing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@android:color/transparent"
                android:dividerHeight="15dp">

            </com.augmentaa.sparkev.utils.ListViewForEmbeddingInScrollView>

            <TextView

                android:id="@+id/request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dip"
                android:fontFamily="@font/inter_medium"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Requested"
                android:textColor="@color/colorlight"
                android:textSize="16sp" />

            <com.augmentaa.sparkev.utils.ListViewForEmbeddingInScrollView
                android:id="@+id/lv_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@android:color/transparent"
                android:dividerHeight="15dp">

            </com.augmentaa.sparkev.utils.ListViewForEmbeddingInScrollView>

        </LinearLayout>

    </ScrollView>
</LinearLayout>