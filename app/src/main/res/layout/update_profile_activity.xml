<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBg"
            android:orientation="vertical"
            android:padding="20dp"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/btn_back">

                </ImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"


                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@mipmap/profile_pic"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="0dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Add Photo"
                        android:textColor="@color/themeColor"
                        android:textSize="14sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/update_profile"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_edit"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:src="@mipmap/ic_edit">

                    </ImageView>

                    <TextView
                        android:id="@+id/tv_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/inter_regular"
                        android:singleLine="true"
                        android:text="Edit"
                        android:textColor="@color/colorTextLight"
                        android:textSize="14sp" />

                </LinearLayout>

            </RelativeLayout>


            <EditText
                android:id="@+id/f_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="@font/inter_regular"
                android:hint="First Name"
                android:inputType="textCapSentences"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textColorHint="@color/colorTextcolor"

                android:singleLine="true"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/coloretTexT_Botttom">

            </View>

            <EditText
                android:id="@+id/l_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="@font/inter_regular"
                android:inputType="textCapSentences"
                android:textColorHint="@color/colorTextcolor"

                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:singleLine="true"
android:hint="Last Name"
                android:textColor="@color/colorText"
                android:textSize="16sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/coloretTexT_Botttom">

            </View>

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:focusable="false"
                android:textColorHint="@color/colorTextcolor"

                android:fontFamily="@font/inter_regular"
                android:inputType="textCapSentences"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:singleLine="true"
                android:hint="Email"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/coloretTexT_Botttom">

            </View>

            <TextView
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:focusable="false"
                android:textColorHint="@color/colorTextcolor"

                android:fontFamily="@font/inter_regular"
                android:inputType="number"
                android:maxLength="10"
                android:hint="Mobile"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:singleLine="true"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/coloretTexT_Botttom">

            </View>


            <TextView
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableRight="@mipmap/down_arrow"
                android:drawablePadding="10dp"
                android:fontFamily="@font/inter_regular"
                android:paddingTop="15dp"
                android:textColorHint="@color/colorTextcolor"

                android:paddingBottom="15dp"
                android:singleLine="true"
                android:text=""
                android:hint="Select Country"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/coloretTexT_Botttom">

            </View>


            <TextView
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableRight="@mipmap/down_arrow"
                android:drawablePadding="10dp"
                android:fontFamily="@font/inter_regular"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:singleLine="true"
                android:text=""
                android:textColorHint="@color/colorTextcolor"

                android:hint="Select State"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/coloretTexT_Botttom">

            </View>


            <!--  <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:gravity="center_vertical"
                  android:orientation="horizontal"
                  android:weightSum="1">
                  &lt;!&ndash; <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="0.65"
                       android:text="Select Model"
                       android:layout_marginLeft="10dp"
                       tools:ignore="Suspicious0dp"
                       android:textSize="16sp">

                   </TextView>&ndash;&gt;


              </LinearLayout>-->
            <EditText
                android:id="@+id/zipcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="@font/inter_regular"
                android:inputType="number"
                android:textColorHint="@color/colorTextcolor"

                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:singleLine="true"
                android:hint="Zipcode"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/coloretTexT_Botttom">

            </View>

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:backgroundTint="@android:color/transparent"
                android:drawablePadding="10dp"
                android:fontFamily="@font/inter_regular"
                android:gravity="left|top"
                android:hint="Address"
                android:inputType="textCapSentences"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorTextLight"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/coloretTexT_Botttom">

            </View>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@drawable/bg_login_btn"
                android:fontFamily="@font/inter_medium"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
