                android:text="Choose the topic"
                android:textColor="@color/colorGray"
                android:textSize="16sp" />-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/coloretTexT_Botttom">

            </View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">
                <!-- <TextView
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="0.65"
                     android:text="Select Model"
                     android:layout_marginLeft="10dp"
                     tools:ignore="Suspicious0dp"
                     android:textSize="16sp">

                 </TextView>-->
                <TextView
                    android:id="@+id/tv_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:drawableRight="@mipmap/down_arrow"
                    android:fontFamily="@font/inter_regular"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:text="Choose your topic"
                    android:textColor="@color/colorText"
                    android:textSize="16sp" />
                <Spinner
                    android:id="@+id/sp_question"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:gravity="right"
                    android:visibility="gone"
                    tools:ignore="Suspicious0dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/coloretTexT_Botttom">

            </View>



            <EditText
                android:id="@+id/remarks"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:gravity="left|top"
                android:fontFamily="@font/inter_regular"
                android:padding="10dp"
                android:hint="Remarks"
                android:background="@null"
                android:backgroundTint="@android:color/transparent"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorTextLight"
                android:textSize="16sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/coloretTexT_Botttom">

            </View>


            <Button
                android:id="@+id/req_call"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@drawable/bg_login_btn"
                android:text="Send request"
                android:fontFamily="@font/inter_medium"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:fontFamily="@font/inter_medium"
                android:textAllCaps="false"
                android:gravity="center"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

