<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:id="@+id/back"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/btn_back">

    </ImageView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ly_upgrade_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_ly_services_grad"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/img_upgrade"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_upgrade_tracking">

                </ImageView>

                <TextView
                    android:id="@+id/tv_upgrade"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="bottom"
                    android:text="Track your request"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/cardview1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="20dp"
                        card_view:cardBackgroundColor="@color/white"
                        card_view:cardCornerRadius="@dimen/dimen_8dp"
                        card_view:cardElevation="8dp"
                        card_view:contentPadding="8dp">

                        <LinearLayout
                            android:id="@+id/top_pingassets"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/request_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center_vertical"
                                android:text="Request ID : 12345678909987"
                                android:textColor="@color/colorText"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/request_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center_vertical"
                                android:text="Request Date : 12.12.2022"
                                android:textColor="@color/colorText"
                                android:textSize="12sp" />


                            <TextView
                                android:id="@+id/nick_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center_vertical"
                                android:text="Nick Name : CHARGERTEST0009"
                                android:textColor="@color/colorText"
                                android:textSize="12sp" />


                            <TextView
                                android:id="@+id/charger_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center_vertical"
                                android:text="Nick ID : CHARGERTEST0009"
                                android:textColor="@color/colorText"
                                android:textSize="12sp" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>


                <com.augmentaa.sparkev.utils.ListViewForEmbeddingInScrollView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:dividerHeight="0dp"
                    android:divider="@android:color/transparent"
                    android:scrollbars="none"
                   /> >

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/colorText"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="You can call /e-mail to our customer care for rescheduling the engineer visit or to get any information about your order">
                </TextView>



            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>