<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/already_user"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/back"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/btn_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/inter_regular"
                android:gravity="center_horizontal|top"
                android:text="@string/otp_verification"
                android:textColor="@color/colorText"
                android:textSize="32sp" />

        </LinearLayout>




        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <LinearLayout
                android:id="@+id/sign_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/already_user"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="vertical">


                <!--   <TextView
                       android:id="@+id/et_f_name"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_horizontal"
                       android:layout_marginTop="15dp"
                       android:hint="@string/otp_willbe_read_auto"
                       android:singleLine="true"
                       android:textColor="@color/colorPrimaryDark"
                       android:textDirection="locale"
                       android:textSize="18sp"
                       tools:ignore="RtlCompat" />-->

                <TextView
                    android:id="@+id/tv_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/please_wait_otp1"
                    android:textDirection="locale"
                    android:textColor="@color/colorTextLight"
                    android:textSize="14sp"
                    tools:ignore="RtlCompat" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/p1"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/colorTextMeduim"
                        android:background="@drawable/otp_unselected"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical|center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="16sp"
                        tools:ignore="RtlCompat" />

                    <EditText
                        android:id="@+id/p2"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/otp_unselected"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical|center"
                        android:inputType="number"
                        android:textColor="@color/colorTextMeduim"

                        android:maxLength="1"
                        android:textSize="16sp"

                        tools:ignore="RtlCompat" />

                    <EditText
                        android:id="@+id/p3"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/otp_unselected"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical|center"
                        android:textColor="@color/colorTextMeduim"

                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="16sp"
                        tools:ignore="RtlCompat" />

                    <EditText
                        android:id="@+id/p4"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/otp_unselected"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:inputType="number"
                        android:textColor="@color/colorTextMeduim"

                        android:maxLength="1"
                        android:textSize="16sp"
                        tools:ignore="RtlCompat" />

                    <EditText
                        android:id="@+id/p5"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/otp_unselected"
                        android:textColor="@color/colorTextMeduim"

                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="16sp"
                        tools:ignore="RtlCompat" />

                    <EditText
                        android:id="@+id/p6"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/otp_unselected"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:inputType="number"
                        android:textColor="@color/colorTextMeduim"

                        android:maxLength="1"
                        android:textSize="16sp"
                        tools:ignore="RtlCompat" />

                </LinearLayout>


                <TextView
                    android:id="@+id/timer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:gravity="center"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/colorTextLight"
                    android:textDirection="locale"
                    android:textSize="14sp"
                    tools:ignore="RtlCompat" />


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/bg_login_btn"
            android:fontFamily="@font/inter_medium"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />
        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="3dp"
            android:text="Send Again"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />-->

        <TextView
            android:id="@+id/send_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:drawablePadding="8dp"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/send_again"
            android:textColor="@color/colorTextLight"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="MissingPrefix" />

    </LinearLayout>
</LinearLayout>