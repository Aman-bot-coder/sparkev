<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:padding="5sp">

                <ImageView
                    android:id="@+id/img_connect"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@mipmap/bluetooth" />

                <TextView
                    android:id="@+id/charger_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerInParent="true"
                    android:drawableRight="@mipmap/arrow_home"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/inter_regular"
                    android:text="Select Charger"
                    android:textColor="@color/colorText"
                    android:textSize="16sp"></TextView>

                <ImageView
                    android:id="@+id/img_notification"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/notificaton_home" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/ring_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_charger_status"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/light_home">

                    </ImageView>

                    <TextView
                        android:id="@+id/charger_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_charger_status"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="disconnected"
                        android:textColor="@color/colorlight"
                        android:textSize="16sp"></TextView>

                    <ProgressBar
                        android:id="@+id/progress"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/charger_status"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/time_kwh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/progress"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="00:00"
                        android:textColor="@color/colorlight"
                        android:textSize="32sp"
                        android:textStyle="bold">

                    </TextView>>


                    <TextView
                        android:id="@+id/units"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/time_kwh"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/inter_regular"
                        android:text="hour"

                        android:textColor="@color/colorlight"
                        android:textSize="16sp">

                    </TextView>

                </LinearLayout>

                <ImageView
                    android:id="@+id/img_anim"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:visibility="gone">

                </ImageView>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/schedule"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@mipmap/schedule">

                </ImageView>

                <ImageView
                    android:id="@+id/start_stop"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="30dp"
                    android:src="@mipmap/pause">

                </ImageView>

                <ImageView
                    android:id="@+id/my_charger"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="30dp"
                    android:src="@mipmap/my_charger">

                </ImageView>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_charger_status"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/inter_regular"
                android:text="32 A"
                android:textColor="#595959"
                android:textSize="12sp"></TextView>

            <SeekBar
                android:id="@+id/sb_amp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="32"
                android:progress="32"
                android:backgroundTint="@color/coloretTexT_Botttom"
                android:progressDrawable="@drawable/custom_seekbar"
                android:thumb="@drawable/seekbar_thumb">

            </SeekBar>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:padding="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ly_services"
                    android:padding="15dp"
                    android:weightSum="1">


                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/rb_charging_time"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:checked="false"
                            android:fontFamily="@font/inter_regular"
                            android:text="Charging time"
                            android:textColor="@color/colorText"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#f5f5f5">

                        </View>

                        <RadioButton
                            android:id="@+id/rb_charging_energy"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:checked="false"
                            android:fontFamily="@font/inter_regular"
                            android:text="Charging energy"
                            android:textColor="@color/colorText"
                            android:textSize="16sp" />
                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/tv_charging_time"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:background="@android:color/transparent"
                            android:drawableRight="@mipmap/next_arrow"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="right|center_vertical"
                            android:hint="0 Hour"
                            android:cursorVisible="false"
                            android:maxLength="2"
                            android:inputType="number"
                            android:textColor="@color/colorlight"
                            android:textColorHint="@color/colorlight"
                            android:textSize="14sp"></EditText>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#f5f5f5">

                        </View>


                        <EditText
                            android:id="@+id/tv_charging_energy"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:drawableRight="@mipmap/next_arrow"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="right|center_vertical"
                            android:hint="0 kWh"
                            android:maxLength="2"
                            android:cursorVisible="false"
                            android:inputType="number"
                            android:background="@android:color/transparent"
                            android:textColorHint="@color/colorlight"
                            android:textColor="@color/colorlight"
                            android:textSize="14sp"></EditText>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>