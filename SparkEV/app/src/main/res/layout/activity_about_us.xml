<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".ui.SplashTwoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/btn_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center_horizontal|top"
                    android:text="About"
                    android:textColor="@color/colorText"
                    android:textSize="32sp" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
                    android:textColor="@color/colorText"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/ly_start_charger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_ly_services"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_start_charger"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/down_arrow"
                        android:drawablePadding="15dp"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:padding="20dp"
                        android:text="Imprint"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorText"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/ly_start_charging_dec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_start_charger_dec"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="20dp"
                            android:text="First, we have to login with Alexa application after that search and install Exicom charger application in Alexa. After all authentication, we can star charger with Alexa from remote."
                            android:textColor="@color/colorTextLight"
                            android:textSize="12sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableLeft="@mipmap/ic_alexa_l"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="20dp"
                            android:text=" Alexa start charging"
                            android:textColor="@color/themeColor"
                            android:textSize="12sp" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_ly_services"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_stop_charging"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/down_arrow"
                        android:drawablePadding="15dp"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:padding="20dp"
                        android:text="Terms of use"
                        android:textColor="@color/colorText"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/ly_stop_charging_dec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_stop_charger_dec"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="20dp"
                            android:text="In this features we can stop charger with Alexa from remote."
                            android:textColor="@color/colorTextLight"
                            android:textSize="12sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableLeft="@mipmap/ic_alexa_l"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="20dp"
                            android:text=" Alexa stop charging"
                            android:textColor="@color/themeColor"
                            android:textSize="12sp" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_charing_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_ly_services"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_charging_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/down_arrow"
                        android:drawablePadding="15dp"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:padding="20dp"
                        android:text="Privacy policy"
                        android:textColor="@color/colorText"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/ly_status_charging_dec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_status_charger_dec"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="20dp"
                            android:text="This features gives you the current charging status - Charger Idle, Charger Offline, Charging stopped, Charging in progress - charged xx Kwh of energy and charging running since x hrs xx minutes."
                            android:textColor="@color/colorTextLight"
                            android:textSize="12sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableLeft="@mipmap/ic_alexa_l"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="20dp"
                            android:text="Alexa charger status"
                            android:textColor="@color/themeColor"
                            android:textSize="12sp" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>