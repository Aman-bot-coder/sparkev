<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".ui.SplashTwoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/btn_back" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/inter_regular"
                    android:text="Upgrade to connect Charger"
                    android:textColor="@color/colorText"
                    android:textSize="32sp" />

                <LinearLayout
                    android:id="@+id/ly_charger"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/bg_ly_services"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="1"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/charger_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/ic_sw_update_cd"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical|left"
                        android:padding="15dp"
                        android:layout_weight="0.7"
                        android:text="Upgrade your Home Charger to internet. Enabled Charger at a very nominal one-time fee"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorText"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/amount"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.3"
                        android:textColor="@color/white"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:background="@drawable/bg_login_btn">

                    </TextView>




                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ly_static_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_ly_services"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_benefits"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableRight="@mipmap/down_arrow"
                            android:drawablePadding="15dp"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:padding="20dp"
                            android:text="Why do you need to upgrade to connected charger?"
                            android:textColor="@color/colorText"
                            android:textSize="16sp" />


                        <LinearLayout
                            android:id="@+id/ly_benefits"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_regular"
                                android:gravity="center_vertical"
                                android:padding="15dp"
                                android:text="Internet enabled chargers comes handy and offers many advance features which makes charging management very easy. Some of the key features which connected charger offers inludes.Schedule your charging"
                                android:textColor="@color/colorTextLight"
                                android:visibility="gone"
                                android:textSize="12sp" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp">

                                <TextView
                                    android:layout_width="5dp"
                                    android:layout_height="5dp"
                                    android:background="@drawable/bullets"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/inter_regular"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorTextLight"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/inter_regular"
                                    android:gravity="center_vertical"
                                    android:text="Remotely start / stop charging from anywhere in the world"
                                    android:textColor="@color/colorTextLight"
                                    android:textSize="12sp" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp">

                                <TextView
                                    android:layout_width="5dp"
                                    android:layout_height="5dp"
                                    android:background="@drawable/bullets"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/inter_regular"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorTextLight"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/inter_regular"
                                    android:gravity="center_vertical"
                                    android:text="Enable artificial intelligence for solving 90%+ issues automatically"
                                    android:textColor="@color/colorTextLight"
                                    android:textSize="12sp" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp">

                                <TextView
                                    android:layout_width="5dp"
                                    android:layout_height="5dp"
                                    android:background="@drawable/bullets"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/inter_regular"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorTextLight"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"

                                    android:fontFamily="@font/inter_regular"
                                    android:gravity="center_vertical"
                                    android:text="Keep your charger always updated with latest software versions"

                                    android:textColor="@color/colorTextLight"
                                    android:textSize="12sp" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp">

                                <TextView
                                    android:layout_width="5dp"
                                    android:layout_height="5dp"
                                    android:background="@drawable/bullets"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/inter_regular"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorTextLight"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"

                                    android:fontFamily="@font/inter_regular"
                                    android:gravity="center_vertical"

                                    android:text="Get prime service in case of any issue with our charger"
                                    android:textColor="@color/colorTextLight"
                                    android:textSize="12sp" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                >

                                <TextView
                                    android:layout_width="5dp"
                                    android:layout_height="5dp"
                                    android:background="@drawable/bullets"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/inter_regular"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorTextLight"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"

                                    android:fontFamily="@font/inter_regular"
                                    android:gravity="center_vertical"

                                    android:text="Get insights and charging analytics for all or individual users in the family"
                                    android:textColor="@color/colorTextLight"
                                    android:textSize="12sp" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:layout_marginBottom="20dp"
                                >

                                <TextView
                                    android:layout_width="5dp"
                                    android:layout_height="5dp"
                                    android:background="@drawable/bullets"
                                    android:fontFamily="@font/inter_regular"
                                    android:gravity="center_vertical"
                                    android:layout_marginTop="8dp"
                                    android:textColor="@color/colorTextLight"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/inter_regular"
                                    android:gravity="center_vertical"
                                    android:text="Get real time notifications on SPIN App"
                                    android:textColor="@color/colorTextLight"
                                    android:textSize="12sp" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="20dp"
                                android:visibility="gone"
                                android:layout_marginBottom="20dp"
                                android:paddingRight="20dp">

                                <TextView
                                    android:layout_width="5dp"
                                    android:layout_height="5dp"
                                    android:background="@drawable/bullets"
                                    android:fontFamily="@font/inter_regular"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorTextLight"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/inter_regular"
                                    android:gravity="center_vertical"
                                    android:text="Get real time notifications in your app."
                                    android:textColor="@color/colorTextLight"
                                    android:textSize="12sp" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ly_why_do_u_need"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/bg_ly_services"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/why_do_u_need"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableRight="@mipmap/down_arrow"
                            android:drawablePadding="15dp"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:padding="20dp"
                            android:text="What additional benefits you will get with connected charger?"
                            android:textColor="@color/colorText"
                            android:textColorHint="@color/colorText"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/why_do_u_need_des"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="20dp"
                            android:text="In addition to application features, you will get 1 year extended warranty worth INR 4000 absolutely free with this upgrade.\n\nThis scheme is for limited time period only."
                            android:textColor="@color/colorTextLight"
                            android:textSize="12sp"
                            android:visibility="gone" />

                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/ly_under_cover"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_ly_services"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_under_cover_dec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="20dp"
                            android:text="Please refer Warranty Terms and Conditions to understand the exclusions (We can add a link here to Exicom’s AMC page)"
                            android:textColor="@color/colorTextLight"
                            android:textSize="12sp"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <com.augmentaa.sparkev.utils.ListViewForEmbeddingInScrollView
                    android:id="@+id/listview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/transparent"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="15dp"
                    android:scrollbars="none"></com.augmentaa.sparkev.utils.ListViewForEmbeddingInScrollView>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_request_upgrade"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/bg_login_btn"
                        android:fontFamily="@font/inter_medium"
                        android:text="Request to upgrade"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>