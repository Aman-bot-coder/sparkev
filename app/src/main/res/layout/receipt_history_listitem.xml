<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/bg_ly_services"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reciept_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/next_arrow"
            android:fontFamily="@font/inter_regular"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/colorText"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ly_warranty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/charger_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_charger_rh"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:text=""
                android:drawablePadding="15dp"
                android:textColor="@color/colorText"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/session_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_cal"
                android:fontFamily="@font/inter_regular"
                android:singleLine="true"
                android:text=""
                android:drawablePadding="15dp"
                android:textColor="@color/colorText"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/warranty_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/subtract"
                android:fontFamily="@font/inter_regular"
                android:singleLine="true"
                android:text=""
                android:drawablePadding="15dp"
                android:textColor="@color/colorText"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ly_upgrage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:text="Purchase OCPP CARD"
                android:drawablePadding="1dp"
                android:textColor="@color/colorText"
                android:textSize="12sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:singleLine="true"
                android:text="(Connect Charger)"
                android:drawablePadding="1dp"
                android:textColor="@color/colorText"
                android:textSize="12sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:singleLine="true"
                    android:text="Purchase"
                    android:drawablePadding="1dp"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/colorText"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/purchase_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="1dp"
                    android:fontFamily="@font/inter_regular"
                    android:singleLine="true"
                    android:text="Rs. 4000"
                    android:textColor="@color/colorText"
                    android:textSize="12sp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:singleLine="true"
                    android:text="Date of Purchase"
                    android:drawablePadding="1dp"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/colorText"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/date_of_purchase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:singleLine="true"
                    android:text="10.12.2022"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="1dp"
                    android:textColor="@color/colorText"
                    android:textSize="12sp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:singleLine="true"
                    android:text="Date of Activation"
                    android:drawablePadding="1dp"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/colorText"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:singleLine="true"
                    android:text="12.12.2022"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="1dp"
                    android:id="@+id/date_of_activation"
                    android:textColor="@color/colorText"
                    android:textSize="12sp" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:singleLine="true"
                android:text="Additional Benefit"
                android:drawablePadding="1dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorText"
                android:textSize="12sp"
              />

            <TextView
                android:id="@+id/upgrade_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:singleLine="true"
                android:text="1 year extended warranty"
                android:drawablePadding="1dp"
                android:textColor="@color/colorText"
                android:textSize="12sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:singleLine="true"
                    android:text="Activation On"
                    android:drawablePadding="1dp"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/colorText"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:singleLine="true"
                    android:text="12.12.2022"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="1dp"
                    android:id="@+id/activate_on"
                    android:textColor="@color/colorText"
                    android:textSize="12sp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:singleLine="true"
                    android:text="Valid Upto"
                    android:drawablePadding="1dp"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/colorText"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:singleLine="true"
                    android:text="10.12.2022"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="1dp"
                    android:id="@+id/valid_upto"
                    android:textColor="@color/colorText"
                    android:textSize="12sp" />

            </RelativeLayout>
        </LinearLayout>



    </LinearLayout>


</LinearLayout>


